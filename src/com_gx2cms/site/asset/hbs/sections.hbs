<h2>Sections from your GX2CMS Project</h2>
<table>
    <tr>
        <td>Project name</td>
        <td>{{project.name}}</td>
    </tr>
    <tr>
        <td>Project description</td>
        <td>{{project.description}}</td>
    </tr>
    <tr>
        <td>Project root</td>
        <td>{{projectRoot}}</td>
    </tr>
    <tr>
        <td>Client</td>
        <td>{{project.client}}</td>
    </tr>
</table>
<hr />
<div class="row-fluid">
    <div class="span6">
        <label for="page">Select your page</label>
        <select id="page" name="page" class="form-control">
            <option value="">Select a page</option>
            {{#each pages}}
                <option value="{{path}}">{{currentPage.title}}</option>
            {{/each}}
        </select>
    </div>
    <div class="span6">
        <label for="section">Select your section</label>
        <select id="section" name="section">
            <option value="">Select a section</option>
            {{#each sections}}
                <option value="{{path}}">{{title}}</option>
            {{/each}}
        </select>
    </div>
</div>
<input type="hidden" name="basePage" value="{{basePage}}" />
<input type="hidden" name="layout" value="render" />
<hr />
<div class="actions">
    <button type="button" class="btn btn-primary" onclick="GX2CMS.renderSection()">Render Section</button>
</div>